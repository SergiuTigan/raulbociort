---
import MainLayout from '../../layouts/MainLayout.astro';
import { servicesData } from '../../scripts/data';
import Service from '../../components/Service.astro';
import '../../styles/Services.scss';
---
<MainLayout title="Services">
  <div class="flex flex-col w-[90%] mx-auto">
    <img src="/img/1.jpg" class="h-96 md:block w-[60%] my-5 mx-auto hidden" alt="...">
  </div>
  <div class="mt-5 text-center md:text-left md:ml-[23%] font-semibold">
    <h1 class="text-2xl uppercase text-gray-900">TELLUS AC RISUS SERVICES.</h1>
    <p class="mt-2 text-xl text-gray-500"> Vivamus sagittis lacus vel auque laoreet rutrum</p>
  </div>
  <div class="flex flex-col">
    {servicesData.map((service, index) => {
      service.buttonText = 'Vezi Proiecte';
      return (
        <Service {service} classes={['service', 'mb-5']}/>
      );
    })}
  </div>
</MainLayout>